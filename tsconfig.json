{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "allowJs": true,
        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "exclude": ["node_modules", "dist"],
    "include": ["**/*.ts", "**/*.js"]
}
